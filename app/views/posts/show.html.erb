    <%= render 'shared/loading_engine' %>
    <%= render 'shared/navbar' %>
    <section class="what-we-offer" id="services">
      <div class="auto-container">
        <div class="row clearfix">
          <div class="flexbox">
            <%= simple_form_for(@post) do |f| %>
              <%= f.input :status, input_html: { value: "Scam" }, as: :hidden %>
              <%= f.submit "Scam", class: 'theme-btn btn-style-two fraudulent' %>
            <% end %>
            <%= simple_form_for(@post) do |f| %>
              <%= f.input :status, input_html: { value: "Call required" }, as: :hidden %>
              <%= f.submit "Call required", class: 'theme-btn btn-style-two manual-check' %>
            <% end %>
            <%= simple_form_for(@post) do |f| %>
              <%= f.input :status, input_html: { value: "Legit" }, as: :hidden %>
              <%= f.submit "Legit", class: 'theme-btn btn-style-two legit' %>
            <% end %>
            <div class="theme-btn btn-style-one" id="launch-engine"><i class="fas fa-cogs"></i> Launch Barinomi Engine</div>
          </div>
            <div class="text-column col-md-6 col-sm-12 col-xs-12">
                <div class="inner">
                    <h2>Post : <%=@post.id%></h2>
                    <div class="description-box">
                      <div class="text description-base"><p align="justify"><%= @post.description %></p></div>
                      <div class="text response-api"><p align="justify">
                        <% counter = 0 %>
                        <% @description_array.each do |array| %>
                          <% if counter.odd? %>
                            <span class="error" data-toggle="tooltip" data-placement="bottom" title="<%= array[0] %>"><%=@post.description[array[1], array[2]]%></span>
                            <% counter += 1 %>
                          <% else %>
                            <span class="no_error"><%=@post.description[array[1], array[2]]%></span>
                            <% counter += 1 %>
                          <% end %>
                        <% end %>
                      </p>
                      </div>
                  </div>
                </div>
            </div>
                <div class="features-column col-md-6 col-sm-12 col-xs-12">
                    <div class="inner">
                        <div class="row clearfix">
                            <div class="service-style-two col-md-6 col-sm-6 col-xs-12">
                                <div class="inner-box">
                                    <div class="icon"><figure class="image"><img src="../assets/icon-10.png" alt=""></figure></div>
                                    <h3>User</h3>
                                    <div class="text">
                                      <%= @post.firstname %><br>
                                      <%= @post.lastname %>
                                      <div class="response-api">
                                        Number of posts: <%= @response[:nb_posts_user] %>
                                      </div>
                                    </div>
                                </div>
                            </div>
                            <div class="service-style-two col-md-6 col-sm-6 col-xs-12">
                                <div class="inner-box">
                                    <div class="icon"><figure class="image"><img src="../assets/icon-24.png" alt=""></figure></div>
                                    <h3>Address</h3>
                                    <div class="text"><%= @post.address %><br><%= @post.city %>
                                      <%= @post.zip_code %>
                                    </div>
                                </div>
                            </div>
                            <div class="service-style-two col-md-6 col-sm-6 col-xs-12">
                                <div class="inner-box">
                                    <div class="icon"><figure class="image"><img src="../assets/icon-30.png" alt=""></figure></div>
                                    <h3>Surface</h3>
                                    <div class="text">
                                      <% unless @post.property_surface.nil? %>
                                        <%= @post.property_surface.round %> m2
                                      <% end %>
                                    </div>
                                </div>
                            </div>
                            <div class="service-style-two col-md-6 col-sm-6 col-xs-12">
                                <div class="inner-box">
                                    <div class="icon"><figure class="image"><img src="../assets/icon-23.png" alt=""></figure></div>
                                    <h3>Rent</h3>
                                    <div class="text">
                                    <% unless @post.rent_with_expenses_amount.nil? %>
                                      <%= @post.rent_with_expenses_amount.round %> € / mois
                                    <% end %>
                                    </div>
                                </div>
                            </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="what-we-offer response-api" id="barinomi-analysis">
      <div class="auto-container">
        <div class="row clearfix">

          <div class="flexbox">

            <div class="text-column col-md-6 col-sm-12 col-xs-12">
              <div class="inner">
                <h2>Description analysis</h2>
                <div class="description-box">
                  <h3>Length</h3><p>post length:
                    <div class="number-of-posts"> <%= @post.description.length %> characters
                    </div> <br> average length: 500 characters</p>
                  <h3>Language</h3>
                  <p>
                    <% @response[:language_detected].each do |language| %>
                      <div class="number-of-posts">
                        <%= language %>
                      </div>
                    <% end %>
                  </p>
                  <h3>Scammer lexical score</h3><p>
                    <div class="number-of-posts">
                      <%= @response[:lexical_fields_of_scammer_score] * 100 %>%
                    </div>
                    </p>
                </div>
              </div>
            </div>

            <div class="text-column col-md-6 col-sm-12 col-xs-12">
              <div class="inner">
                <h2>Price analysis</h2>
                <div class="label-price-box">
                  <% @response[:labels].each do |label| %>
                    <div class="number-of-posts"><%= label %></div>
                  <% end %>
                </div>
                <div class="description-box graph-box overflow-visible">
                  <table id="q-graph">
                  <thead>
                  <tr>
                  <th></th>
                  <th class="lower">Lower bracket</th>
                  <th class="mean">Mean</th>
                  <th class="upper">Upper bracket</th>
                  </tr>
                  </thead>
                  <tbody>
                  <tr class="qtr" id="q1">
                  <th scope="row-graph"></th>
                  <td class="post bar post-bar"data-toggle="tooltip" data-placement="top" title="Post price : <%= @post.rent_with_expenses_amount.round %>€"><p></p><%= @post.rent_with_expenses_amount.round %></td>
                  </tr>
                  <tr class="qtr" id="q2">
                  <th scope="row-graph">Studapart prices</th>
                  <td class="first bar studapart-lower-bar" data-toggle="tooltip" data-placement="top" title="Studapart price (lower) : <%= @response[:studapart_price][:lower] %>€"><p><%= @response[:studapart_price][:lower] %></p></td>
                  <td class="second bar studapart-mean-bar"data-toggle="tooltip" data-placement="top" title="Studapart price (mean) : <%= @response[:studapart_price][:mean] %>€"><p><%= @response[:studapart_price][:mean] %></p></td>
                  <td class="third bar studapart-higher-bar"data-toggle="tooltip" data-placement="top" title="Studapart price (higher) : <%= @response[:studapart_price][:higher] %>€"><p><%= @response[:studapart_price][:higher] %></p></td>
                  </tr>
                  <tr class="qtr" id="q3">
                  <th scope="row-graph">Market prices</th>
                  <td class="first bar market-lower-bar"data-toggle="tooltip" data-placement="top" title="Market price (lower) : <%= @response[:market_price][:lower] %>€"><p><%= @response[:market_price][:lower] %></p></td>
                  <td class="second bar market-mean-bar"data-toggle="tooltip" data-placement="top" title="Market price (mean) : <%= @response[:market_price][:mean] %>€"><p><%= @response[:market_price][:mean] %></p></td>
                  <td class="third bar market-higher-bar"data-toggle="tooltip" data-placement="top" title="Market price (higher) : <%= @response[:market_price][:higher] %>€"><p><%= @response[:market_price][:higher] %></p></td>
                  </tr>
                  </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
