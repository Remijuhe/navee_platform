    <section class="testimonials-two" id="testimonials">
      <div class="auto-container">

        <% if !(@post.pictures.nil?) %>
         <% unless @post.pictures.gsub("[", "").gsub("]", "").gsub("'", "").split(",")[0].nil? %>
          <% @post.pictures.gsub("[", "").gsub("]", "").gsub("'", "").split(",").each do |picture| %>
              <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= picture %>);">
                  <div class="duplicate-number response-api">Results on the web : 1</div>
                  <div class="picture-type response-api">Amateur</div>
                </div>
              </div>
            <% end %>
        <% end %>
        <% end %>
      </div>
