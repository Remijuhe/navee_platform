<%= render 'shared/navbar_alternate' %>
<section class="contact-section" id="contact">
  <div class="auto-container">
      <div class="row clearfix">
        <div class="image-column col-md-6 col-sm-12 col-xs-12">
        <div class="inner">
          <figure class="image"><img src="<%= @pictures_array[0] %>" alt="" style="max-width:500px;"></figure>
        </div>
        </div>
        <div class="form-column col-md-6 col-sm-12 col-xs-12">
        <div class="sec-title">
          <h2>Add a new post to your Barinomi database</h2>
        </div>

          <%= simple_form_for @post do |f| %>
            <%= f.input :rent_with_expenses_amount, input_html: { value: @price.gsub("â‚¬","").to_i } %>
            <%= f.input :description, input_html: { value: @description }  %>
            <%= f.input :firstname, input_html: { value: @name } %>
            <%= f.input :property_surface, input_html: { value: @surface.gsub("m2","").to_i } %>
            <%= f.input :address, input_html: { value: @address } %>
            <%= f.input :city, input_html: { value: @city } %>
            <%= f.input :pictures, input_html: { value: @pictures_array } %>
            <%= f.input :nb_posts_user, input_html: { value: @response["nb_posts_user"] }, as: :hidden %>
            <%= f.input :reposting_history, input_html: { value: @response["reposting_history"] }, as: :hidden  %>
            <%= f.input :market_price, input_html: { value: @response["market_price"].to_s }, as: :hidden  %>
            <%= f.input :studapart_price, input_html: { value: @response["studapart_price"].to_s }, as: :hidden  %>
            <%= f.input :labels, input_html: { value: @response["labels"].to_s }, as: :hidden  %>
            <%= f.input :syntax_checking, input_html: { value: @response["syntax_checking"].to_s }, as: :hidden  %>
            <%= f.input :languages_detected, input_html: { value: @response["languages_detected"].to_s }, as: :hidden  %>
            <%= f.input :description_suspiciousness, input_html: { value: @response["lexical_scammer_score"] }, as: :hidden  %>
            <%= f.input :pictures_informations, input_html: { value: @response["pictures_informations"].to_s }, as: :hidden  %>
            <%= f.input :input_errors, input_html: { value: @response["input_errors"].to_s }, as: :hidden  %>
            <%= f.input :email_detected, input_html: { value: @response["email_detected"] }, as: :hidden  %>
            <%= f.input :url_detected, input_html: { value: @response["url_detected"] }, as: :hidden  %>
            <%= f.input :phone_detected, input_html: { value: @response["phone_detected"] }, as: :hidden  %>
            <%= f.submit "Add a new post", class:"theme-btn btn-style-two" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

